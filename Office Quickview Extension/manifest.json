{
  "manifest_version": 3,
  "name": "Docx QuickView",
  "version": "1.0",
  "description": "View local Word (.docx) files instantly in your browser.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "file://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Docx QuickView"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "js/viewer.js",
        "css/main.css",
        "js/libs/mammoth.browser.min.js",
        "help.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}